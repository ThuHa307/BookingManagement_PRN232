@model BusinessObjects.Dtos.Account.AccountResponseDto
@{
    ViewBag.Title = "Xóa tài khoản";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section header {
        Xóa tài khoản
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Xác nhận xóa tài khoản</h6>
        </div>
        <div class="card-body">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }

            <div class="alert alert-warning">
                Bạn có chắc chắn muốn xóa tài khoản <strong>@Model.Email</strong>? Hành động này không thể hoàn tác.
            </div>

            <form asp-action="DeleteAccountConfirmed" asp-controller="Admin" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="AccountId" />
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Xóa tài khoản
                    </button>
                    <a asp-action="Accounts" class="btn btn-secondary">
                        <i class="fas fa-times"></i> Hủy bỏ
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto hide alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut();
        }, 5000);
    </script>
}